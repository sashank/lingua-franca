<server>
   <name>Google</name>
   <host_url>http://translate.google.com/translate_t</host_url>
   <post_option name="langpair" value="LANG_PAIR" />
   <post_option name="hl" value="en" />
   <post_option name="ie" value="UTF-8" />
   <post_option name="oe" value="UTF-8" />
   <post_option name="text" value="STRING_TO_BE_TRANSLATED" />
   <Response_parsing>
        <response_tag_name>div<response_tag_name>
        <response_tag_attribute>result_box<response_tag_attribute>
   </Response_parsing>
   <Available_Translations>
        <lang_pair from="Arabic" to="English " lp="ar|en"/>
	<lang_pair from="Chinese" to="English " lp="zh|en"/>
	<lang_pair from="Chinese(Simplified)" to="Chinese (Traditional)" lp="zh-CN|zh-TW "/>
	<lang_pair from="Chinese(Traditional)" to="Chinese (Simplified)" lp="zh-TW|zh-CN"/>
	<lang_pair from="English" to="Arabic" lp="en|ar"/>
	<lang_pair from="English" to="Chinese (Simplified)" lp="en|zh-CN"/>
	<lang_pair from="English" to="Chinese (Traditional)" lp="en|zh-TW"/>
	<lang_pair from="English" to="French" lp="en|fr"/>
	<lang_pair from="English" to="German" lp="en|de"/>
	<lang_pair from="English" to="Italian" lp="en|it"/>
	<lang_pair from="English" to="Japanese" lp="en|ja"/>
	<lang_pair from="English" to="Korean" lp="en|ko"/>
	<lang_pair from="English" to="Portuguese" lp="en|pt"/>
	<lang_pair from="English" to="Russian" lp="en|ru"/>
	<lang_pair from="English" to="Spanish" lp="en|es"/>
	<lang_pair from="French" to="English" lp="fr|en "/>
	<lang_pair from="French" to="German" lp="fr|de"/>
	<lang_pair from="German" to="English" lp="de|en "/>
	<lang_pair from="German" to="French" lp="de|fr"/>
	<lang_pair from="Italian" to="English" lp="it|en "/>
	<lang_pair from="Japanese" to="English" lp="ja|en"/>
	<lang_pair from="Korean" to="English" lp="ko|en"/>
	<lang_pair from="Portuguese" to="English" lp="pt|en"/>
	<lang_pair from="Russian" to="English" lp="ru|en"/>
	<lang_pair from="Spanish" to="English" lp="es|en"/>
   </Available_Translations>
 </server>
